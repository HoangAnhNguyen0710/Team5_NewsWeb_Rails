<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="content-wrapper">
    <div class="container">
      <div class="row">
        <div class="col-sm-6 offset-sm-3">
          <div class="card" data-aos="fade-up">
            <div class="card-body">
              <div>
                <h1 class="text-center mb-5 text-uppercase">
                  Sign Up
                </h1>
                <div class="row">
                  <div class="col-sm-12">
                    <div class="form-group">
                      <%= render "devise/shared/links" %>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-sm-12">
                    <div class="form-group">
                      <%= f.label :name %><br/>
                      <%= f.text_field :name, style: "width: 100%; height: 48px; padding: 0 16px", placeholder: "Enter Fullname" %>
                    </div>
                  </div>
                </div>


                <div class="row">
                  <div class="col-sm-12">
                    <div class="form-group">
                      <%= f.label :email %><br/>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%; height: 48px; padding: 0 16px", placeholder: "Enter Email" %>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-sm-12">
                    <div class="form-group">
                      <%= f.label :avatar %>
                      <br>
                      <%= f.file_field :avatar %><br>
                    </div>
                  </div>
                </div>


                <div class="row">
                  <div class="col-sm-12">
                    <div class="form-group">
                      <%= f.label :password %>
                      <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %><br/>
                      <%= f.password_field :password, autocomplete: "new-password", style: "width: 100%; height: 48px; padding: 0 16px", placeholder: "Enter Password" %>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-sm-12">
                    <div class="form-group">
                      <%= f.label :password_confirmation %><br/>
                      <%= f.password_field :password_confirmation, autocomplete: "new-password", style: "width: 100%; height: 48px; padding: 0 16px", placeholder: "Enter Password" %>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-sm-12">
                    <div class="form-group">
                      <%= f.submit "Sign up", data: { turbo: false }, class: "btn btn-lg font-weight-bold mt-3 float-center", style: "background-color: #032a63; color: #fff;font-size: 16px; width: 100%" %>
                    </div>
                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>


